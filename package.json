{
  "name": "Pantry",
  "version": "0.0.1",
  "author": "Rohan Likhite <rlikhite@gmail.com>",
  "license": "MIT",
  "description": "Free JSON storage for small projects",
  "main": "src/main.ts",
  "repository": {
    "url": "https://github.com/imRohan/Pantry",
    "type": "git"
  },
  "scripts": {
    "dev": "concurrently -k 'tsc && node dist/src/main.js' 'webpack --config webpack.dev.js'",
    "dev-server": "tsc && node --inspect=[0.0.0.0] dist/main.js",
    "linter": "tslint -c tslint.json -p tsconfig.json",
    "fix-linting": "tslint --fix -p tsconfig.json",
    "tests": "jest --coverage",
    "build": "webpack --config webpack.prod.js",
    "validate": "jest && tslint -c tslint.json -p tsconfig.json",
    "server": "tsc && node dist/src/main.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest"
    },
    "testRegex": "./tests/.*.test.ts$",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/node": "^10.12.18",
    "@types/pino": "^5.15.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "concurrently": "^3.6.0",
    "css-loader": "^1.0.0",
    "html-loader": "^0.5.5",
    "jest": "^23.6.0",
    "node-sass": "^4.9.2",
    "pino-pretty": "^3.6.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^6.2.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4",
    "vue-loader": "^15.2.4",
    "vue-resource": "^1.5.1",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.18.3",
    "class-validator": "^0.11.0",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "pino": "^5.17.0",
    "redis": "^2.8.0",
    "request": "^2.87.0",
    "url-loader": "^1.0.1",
    "uuid": "^3.4.0",
    "vue": "^2.5.16"
  }
}
